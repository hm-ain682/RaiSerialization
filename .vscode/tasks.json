{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure (clang, ninja, debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--preset",
        "clang-ninja"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "build RaiJson_JsonTest",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/clang-ninja",
        "--config",
        "Debug",
        "--target",
        "RaiJson_JsonTest"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "build RaiJson_JsonBenchmark",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/clang-ninja",
        "--config",
        "Debug",
        "--target",
        "RaiJson_JsonBenchmark"
      ],
      "group": {
        "kind": "build",
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
