{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang",
      "displayName": "Configure with clang/clang++",
      "description": "Use LLVM clang/clang++ toolchain",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "RAISERIALIZATION_BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "clang-cl",
      "displayName": "Configure with clang-cl (MSVC ABI)",
      "description": "Use clang-cl for MSVC-compatible builds (requires MSVC headers/libs)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-cl",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "RAISERIALIZATION_BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang-debug",
      "configurePreset": "clang",
      "displayName": "Build (clang) - Debug",
      "configuration": "Debug"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang",
      "displayName": "Build (clang) - Release",
      "configuration": "Release"
    },
    {
      "name": "clang-cl-debug",
      "configurePreset": "clang-cl",
      "displayName": "Build (clang-cl) - Debug",
      "configuration": "Debug"
    },
    {
      "name": "clang-cl-release",
      "configurePreset": "clang-cl",
      "displayName": "Build (clang-cl) - Release",
      "configuration": "Release"
    }
  ]
}
